<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BindingDemo.Views.CodeBehindBindingPage"
             Title="Code Behind Binding">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="DayName"
                   FontSize="Large" 
                   HorizontalOptions="Center"/>
            <Label x:Name="MyLabel"
                   FontSize="48"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
            <Frame BackgroundColor="{StaticResource ItemBackground}">
                <Slider x:Name="MySlider"
                        Maximum="360"
                        ThumbColor="{StaticResource Primary}"
                        MinimumTrackColor="{StaticResource Canvas}"
                        MaximumTrackColor="{StaticResource Secondary}"
                        VerticalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>